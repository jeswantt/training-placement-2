class Solution {
    public int timeRequiredToBuy(int[] tickets, int k) {
        var time = 0;
        var need = tickets[k];
        for (var i = 0; i < tickets.length; i++) {
            if (i < k)
                time += Math.min(tickets[i], need);
            else if (i == k)
                time += need;
            else
                time += Math.min(tickets[i], need - 1);
        }
        return time;
    }
}
