class Solution {
    public String removeDigit(String number, char digit) {
        String ans = "";
        for(int i = 0; i < number.length();i++) {
            if(number.charAt(i) == digit){ 
                String curr = number.substring(0,i) + number.substring(i+1, number.length());
               
                ans = ans.compareTo(curr) > 0 ? ans : curr;
            }
        }
        return ans;
    }
}
