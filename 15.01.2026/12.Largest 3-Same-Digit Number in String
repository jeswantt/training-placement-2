class Solution {
    public String largestGoodInteger(String num) {
        String best = "";

        for (int i = 0; i <= num.length() - 3; i++) {
            char a = num.charAt(i);
            char b = num.charAt(i + 1);
            char c = num.charAt(i + 2);

            if (a == b && b == c) {
                String curr = num.substring(i, i + 3);
                if (best.equals("") || curr.compareTo(best) > 0) {
                    best = curr;
                }
            }
        }

        return best;
    }
}
