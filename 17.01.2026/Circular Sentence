class Solution {
    public boolean isCircularSentence(String sentence) {
        if(sentence.charAt(0) != sentence.charAt(sentence.length() - 1)) return false;

        int s = sentence.indexOf(" "); // 8 - find the first match & return it's index
        if(s == -1) return true;

        while(s != -1) {
        if(sentence.charAt(s - 1) != sentence.charAt(s + 1)) return false;
        s = sentence.indexOf(" ", s + 1); // 13, 9 - from 9 onwards find the first match 
        }
        return true;
    }
}
