class Solution {
    public int maximumValue(String[] strs) {
        int[] result = new int[strs.length];
        int maxValue = -1;

        for (int i = 0; i < strs.length; i++) {
            String word = strs[i];
            
            Boolean isWordContainsLetter = CheckWordContainsLetter(word);
           if(isWordContainsLetter == true) {
            int wordlength = word.length();
            result[i] = wordlength;
           } 

           else if(isWordContainsLetter == false) {
            int numValue = getValueFromWord(word);
             result[i] = numValue; 
           }
        
         if(maxValue < result[i]) {
            maxValue = result[i];
         }
        }
    
        return maxValue;
    }

    public Boolean CheckWordContainsLetter(String word) {
        for(int i = 0; i < word.length(); i++) {
            // if(Character.isLetter(word.charAt(i))) {
            //  return true;
            // } 
            if(word.charAt(i) <'0'|| word.charAt(i) >'9'){
                return true;
            }
        }
        return true;
    }

    public int getValueFromWord(String word) {
        // int value = Integer.parseInt(word);
        int value = 0;
        for(int i = 0; i < word.length(); i++) {
            char ch = word.charAt(i);
            value = value * 10 + (ch - '0');
        }
        return value;
    }
}
