class Solution {
    public void sortColors(int[] nums) {
        
        int l = 0, m = 0, r = nums.length-1;

        while (m<=r) {
            if(nums[m] == 0) swap(nums, m++, l++);
            else if (nums[m] == 1) m++;
            else swap(nums, m, r--);
        }
    }

    void swap (int [] nums, int l, int r) {
        int temp = nums[l];
        nums[l] = nums[r];
        nums[r] = temp;
    }
}
