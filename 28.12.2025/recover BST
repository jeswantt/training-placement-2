class Solution {
    TreeNode first, second, prev;

    public void recoverTree(TreeNode root) {
        first = second = prev = null;
        inOrder(root);
        int temp = first.val;
        first.val = second.val;
        second.val = temp;
    }

    public void inOrder(TreeNode root) {
        if (root == null) {
            return;
        }
        inOrder(root.left);
        if (prev != null && prev.val > root.val) {
            if (first == null) {
                first = prev;
            }
            second = root;
        }
        prev = root;
        inOrder(root.right);
    }
}
