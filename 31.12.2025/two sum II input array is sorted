class Solution {
    public int[] twoSum(int[] numbers, int target) {
        int[] arr = new int[2];
        int n = numbers.length;
        int left = 0;
        int right = n-1;
        int sum = 0;
        while(left < right){
            sum = numbers[left] + numbers[right];
            if(sum == target) {
                arr[0] = left+1;
                arr[1] = right+1;
                return arr;
            }else if(sum < target){
                left++;
            }else{
                right--;
            }
        }
        return arr;
    }
}
